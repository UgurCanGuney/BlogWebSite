@model BlogWebSite.Entities.Makale
@{
    ViewBag.Title = "Show";
}



    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 single-content">
                    <h1 class="mb-4">
                        @Model.MakaleBaslik
                    </h1>
                    &mdash;&mdash;&mdash;&mdash;&mdash;&mdash;&mdash;&mdash;
                    <p>@Model.Icerik</p>


                    <hr />
                    <div class="pt-2">
                       @{ 
                           Repositories.CategoryRepository rep = new Repositories.CategoryRepository();
                           BlogWebSite.Entities.Category c = @rep.Listele().FirstOrDefault(z => z.Id == Model.CategoryId);
                     <strong>Kategorisi : </strong><span>@c.CategoryName</span>
                       }
                    </div>
                    <div class="pt-5">
                        <p>Vakit ayırdğınız için <a href="#">Teşekkürler.</a></p>
                    </div>



                </div>






            </div>

        </div>
    </div>


