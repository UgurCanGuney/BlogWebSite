@model BlogWebSite.Entities.Makale
@{
    ViewBag.Title = "Edit";
}

<h2>Makale Güncelleme Sayfası</h2>

<div class="row">
    <div class="col-md-12">
        <form action="/Makale/Edit" method="post">

            <input type="hidden" name="Id" value="@Model.Id" />

            <select class="custom-select btn btn-secondary" id="inputGroupSelect01" name="Kategori">
                <option selected>Kategori Seçiniz</option>
                @{
                    Repositories.CategoryRepository rep = new Repositories.CategoryRepository();
                    List<BlogWebSite.Entities.Category> list = new List<BlogWebSite.Entities.Category>();
                    list = rep.Listele();
                    foreach (var item in list)
                    {
                        <option value="@item.Id">@item.CategoryName</option>
                    }
                }

            </select>
            <br />
            <br />
            <div class="form-group">
                <h6 class="font-weight-bold">Başlık</h6>
                <input type="text" class="form-control" name="Baslik" value="@Model.MakaleBaslik">
            </div>

            <div class="form-group">
                <div class="form-group">
                    <h6 class="font-weight-bold">İçerik</h6>
                    <textarea class="form-control" rows="3" name="Icerik">@Model.Icerik</textarea>
                </div>
            </div>
            <div class="form-group">
                <h6 class="font-weight-bold">Tarih</h6>
                <input type="text" class="form-control" name="Tarih" value="@Model.Tarih.ToShortDateString()" readonly>
            </div>

            <div class="form-group">
                <h6 class="font-weight-bold">Yazar</h6>
                <input type="text" class="form-control" name="Yazar" value="@Model.Yazar">
            </div>


            <button type="submit" class="btn btn-primary">Kaydet</button>
        </form>
    </div>
</div>
